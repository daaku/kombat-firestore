{
  "name": "@daaku/kombat-firestore",
  "author": "Naitik Shah <n@daaku.org>",
  "version": "2.2.0",
  "description": "Kombat storage implemented using Firebase Firestore.",
  "repository": "git@github.com:daaku/kombat-firestore",
  "license": "MIT",
  "prettier": "prettier-config-daaku",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "eslintConfig": {
    "extends": "@daaku",
    "rules": {
      "@typescript-eslint/no-explicit-any": 0
    }
  },
  "scripts": {
    "check:types": "tsc --noEmit",
    "check:lint": "eslint --fix --ignore-pattern dist .",
    "check": "run-p 'check:*' 'test'",
    "build:js": "tsc",
    "build:test": "esbuild --bundle --sourcemap --outdir=dist/bundle test/tests.ts",
    "test": "npm run build:test && TIMEOUT=30000 qunit-puppeteer",
    "build": "run-p check build:js",
    "deploy": "npm run build && npm publish --access=public"
  },
  "keywords": [
    "kombat",
    "crdt",
    "firebase",
    "firestore"
  ],
  "devDependencies": {
    "@daaku/eslint-config": "^4.0.0",
    "@daaku/qunit-puppeteer": "^3.0.0",
    "@types/qunit": "^2.11.2",
    "esbuild": "^0.17.5",
    "eslint": "^8.1.0",
    "nanoid": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "qunit": "^2.17.2",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@daaku/firebase-rest-api": "^2.1.0",
    "@daaku/kombat": "^2.0.0"
  }
}
